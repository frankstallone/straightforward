---
interface Props {
  header: string;
  children: any;
}

const { header } = Astro.props;
---

<li class="accordion__item box max-inline-size:measure-lg">
  <h3 class="max-inline-size:measure-lg">
    <button
      id="accordion-header-1"
      class="accordion__header text-left"
      style="text-wrap: initial;"
      aria-expanded="false"
      aria-controls="accordion-panel-1"
      onclick="toggleAccordionItem()"
    >
      {header}
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="header__toggle-indicator"
        aria-hidden="true"
        viewBox="0 0 512 512"
      >
        <path
          d="M239 111c9.4-9.4 24.6-9.4 33.9 0L465 303c9.4 9.4 9.4 24.6 0 33.9s-24.6 9.4-33.9 0l-175-175L81 337c-9.4 9.4-24.6 9.4-33.9 0s-9.4-24.6 0-33.9L239 111z"
        ></path></svg
      >
    </button>
  </h3>
  <div
    id="accordion-panel-1"
    role="region"
    class="accordion__panel"
    aria-labelledby="accordion-header-1"
  >
    <div class="panel__inner flow prose">
      <slot />
    </div>
  </div>
</li>
