---
type Props = {
  idx: number;
  title: string;
};

const { idx, title } = Astro.props;
---

<details-utils>
  <div
    x-data={'{ activeAccordion: false }'}
    class="box flex flex-col text-left bg-transparent"
    style="--gutter: var(--space-xs-s);"
  >
    <details class="flow">
      <summary
        @click="activeAccordion = !activeAccordion"
        :aria-expanded="activeAccordion"
        aria-controls={`accordion-item-${idx}`}
        class={'accordion-button'}
      >
        {title}
        <svg
          x-show="!activeAccordion"
          focusable="false"
          aria-hidden="true"
          viewBox="0 0 24 24"
          ><path d="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z" fill="currentColor"
          ></path><path d="M0 0h24v24H0z" fill="none"></path></svg
        ><svg
          x-show="activeAccordion"
          focusable="false"
          aria-hidden="true"
          viewBox="0 0 24 24"
          ><path d="M19 13H5v-2h14v2z" fill="currentColor"></path><path
            d="M0 0h24v24H0z"
            fill="none"></path></svg
        >
      </summary>
      <section class="flow prose">
        <slot />
      </section>
    </details>
  </div>
</details-utils>

<script src="@zachleat/details-utils/details-utils.js"></script>
