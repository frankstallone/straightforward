---
export interface Props {
  heading: string;
  content: string;
  url?: string;
  imgUrl?: any;
  alt?: string;
  dataLayout?: string;
  index: number;
  benefits: string[];
}

const {
  url = '#',
  imgUrl,
  alt = 'Straightforward Solutions Image',
  heading,
  content,
  benefits,
  index,
} = Astro.props;
---

<div class="card">
  <div class="card-content flow">
    <h3>{heading}</h3>
    <p>{content}</p>
    <ul>
      {benefits.map((benefit) => <li>{benefit}</li>)}
    </ul>
  </div>
</div>
